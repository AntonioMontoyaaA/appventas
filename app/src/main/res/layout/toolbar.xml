<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <android.support.v7.widget.Toolbar

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/flechaizqblanca"
                    android:backgroundTint="@color/turquesa" />
            </LinearLayout>

            <neto.com.mx.reporte.utils.font.RobotoTextView
                android:id="@+id/txtappversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="0dp"
                android:text=""
                android:textColor="@color/blanco"
                android:textSize="8sp"
                app:typeface="robotoLight" />

            <LinearLayout
                android:id="@+id/nuevasTiendas"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/nuevaTienda"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/carritopuerta_azul_lupa" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nuevasTiendasAperturas"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgNuevaTiendaApertura"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-2dp"/>
            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_marginStart="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">



            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:id="@+id/tiendasSinVentas"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgTiendasSinVentas"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="0dp"

                    />
            </LinearLayout>
            <!--
            android:background="@drawable/carritoturquesa"
            android:backgroundTint="@color/turquesa"-->
            <LinearLayout
                android:id="@+id/tiendas"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/ic_shopping_cart_black_24dp"
                    android:backgroundTint="@color/turquesa" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/calendario"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/agregar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/ic_date_range_black_24dp"

                    android:backgroundTint="@color/turquesa" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/information"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_information"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/ic_action_information"

                    android:backgroundTint="@color/turquesa" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>


</layout>