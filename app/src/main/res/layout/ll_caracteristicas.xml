<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/ll_caracteristicas_ii"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="0dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="#fff"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ll_childLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="50dp"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:visibility="gone" />


                <LinearLayout
                    android:id="@+id/ll_botones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="50dp"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/ll_btn_guardar_c_g"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/estilo_boton_login"
                        android:text="@string/guardar"
                        android:textAllCaps="false"
                        android:textColor="@color/blanco"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btn_abrirWorkChat"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/estilo_boton_login"
                        android:text="@string/abrir_workplace"
                        android:textAllCaps="false"
                        android:textColor="@color/blanco"
                        android:textSize="18sp" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>




